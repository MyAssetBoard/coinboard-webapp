{
        "tags": {
                "allowUnknownTags": true
        },
        "source": {
                "include": ["coin_board/", "coin_board/bin",
			"coin_board/methods",
			"coin_board/params",
			"coin_board/routes"
		],
                "exclude": ["node_modules/"],
                "includePattern": ".+\\.js(doc|x)?$",
                "excludePattern": "(^|\\/|\\\\)_"
        },
        "plugins": ["plugins/markdown"],
        "templates": {
                "cleverLinks": false,
                "monospaceLinks": false,
                "default": {
                        "outputSourceFiles": true
                }
        }
}
