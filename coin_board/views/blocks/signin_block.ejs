<!--signin-block-->
<div class="container-full-bg">
	<input class="form-control text-center" type="text" placeholder="Signin" readonly>
	<div class="form-group">
		<label class="text-center" for="InputName">
			Name/Pseudo
		</label>
		<input type="text" class="form-control" id="InputName"
		placeholder="Enter your name">
	</div>
	<div class="form-group">
		<label class="text-center" for="InputEmail">
			Email
		</label>
		<input type="email" class="form-control" id="InputEmail"
		placeholder="Enter your email">
	</div>
	<div class="form-group">
		<label class="text-center" for="InputCompany">
			Company
		</label>
		<input type="text" class="form-control" id="InputCompany"
		placeholder="Enter your company name">
	</div>
	<div class="form-group">
		<label class="text-center" for="InputCompany">
			Base currency
		</label>
		<select class="form-control" id="InputBcurr">
			<option>EUR</option>
			<option>USD</option>
			<option>BTC</option>
		</select>
	</div>
	<button class="btn btn-primary btn-lg btn-block" id="click">
		CREATE
	</button>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel">
				Signin
			</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="modal-body" id="dialogtext"></div>
		<div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">
				Close
			</button>
			<button type="button" class="btn btn-primary" data-dismiss="modal">
				Ok
			</button>
		</div>
	</div>
</div>
</div>
