<div class="container-full-bg">
	<input class="form-control text-center" type="text" placeholder="Signin" readonly="readonly">
	<div class="form-group">
		<label class="text-center" for="iname">
			Name/Pseudo
		</label>
		<input type="text" class="form-control" id="iname" placeholder="Enter your name">
	</div>
	<div class="form-group">
		<div class="form-row">
			<div class="form-group col-md-6">
				<label class="text-center" for="imail">
					Email
				</label>
				<input type="email" class="form-control" id="imail" placeholder="Enter your email">
			</div>
			<div class="form-group col-md-6">
				<label class="text-center" for="isocket">
					Socket ID
				</label>
				<input type="text" class="form-control mb-2" id="isocket" value="socketid" readonly="readonly">
			</div>
		</div>
	</div>
	<div class="form-group">
		<label class="text-center" for="ieth">
			Ethereum Address
		</label>
		<input type="text" class="form-control" id="ieth" placeholder="Enter your eth address manually if no MetaMask">
	</div>
	<div class="form-group">
		<label class="text-center" for="icurr">
			Base currency
		</label>
		<select class="form-control" id="icurr">
			<option>EUR</option>
			<option>USD</option>
			<option>BTC</option>
		</select>
	</div>
	<button class="btn btn-primary btn-lg btn-block" id="register">
		CREATE
	</button>
</div>