<% if (locals.data) { %>
	<%
	for (var type in locals.data.Apis) { %>
		<div class="card">
			<h5 class="card-header text-center"><%= type %></h5>
			<%
			for (var el in locals.data.Apis[type]) { %>
				<%- include('api_list', {
					id: locals.data.Apis[type][el].name,
					key: locals.data.Apis[type][el].key,
					secret: '******',
				} ) %><%} %>
				%>
			</div>
		<% } %>
	<%
}%>
	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addapimod">
		Add account
	</button>
	<div class="modal fade" id="addapimod" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLongTitle">Add api account
					</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form action="/assets/addapis" method="post">
					<div class="modal-body">
						<div class="form-group">
							<label for="stype">Api type</label>
							<select name="apitype" class="form-control" id="stype">
								<option>Bank</option>
								<option>Crypto</option>
								<option>Markets</option>
							</select>
						</div>
						<div class="form-group">
							<label for="sname">Name</label>
							<input name="apiid" type="text" class="form-control" id="sname" rows="1"></input>
						</div>
						<div class="form-group">
							<label for="skey">Key</label>
							<input name="apikey" type="text" class="form-control" id="skey" rows="1"></input>
						</div>
						<div class="form-group">
							<label for="ssec">Secret</label>
							<input name="apisecret" type="password" class="form-control" id="ssec" rows="1"></input>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-primary text-white">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>